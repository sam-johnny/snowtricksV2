<!doctype html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Un blog sur le snowtricks">
    <title>{% block title %}Snowtricks{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('assets/app.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">

    <script src="https://kit.fontawesome.com/cb6c9bb11d.js" crossorigin="anonymous"></script>

</head>

<body class="d-flex flex-column min-vh-100">

<header>
    {# Navbar top #}
    <nav id="navbar-top" class="navbar navbar-expand-md navbar-dark bg-black sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Snowtricks</a>

            <div class="navbar-nav mb-2 mb-lg-0">
                <a class="nav-link {% if current_menu is defined and current_menu == 'home' %}active{% endif %}"
                   href="{{ path('app.home') }}"><i class="fa-solid fa-house-chimney"></i> Home</a>

                <a class="nav-link {% if current_menu is defined and current_menu == 'tricks' %}active{% endif %}"
                   href="#tricks"><i class="fa-solid fa-list"></i> Tricks</a>

                {% if app.user %}
                    <a class="nav-link" href="{{ path('logout') }}"><i class="fa-solid fa-right-from-bracket"></i>
                        Se
                        d√©connecter</a>
                {% else %}
                    <a class="nav-link {% if current_menu is defined and current_menu == 'login' %}active{% endif %}"
                       href="{{ path('login') }}"><i class="fa-solid fa-right-to-bracket"></i> Se connecter</a>
                    <a class="nav-link {% if current_menu is defined and current_menu == 'register' %}active{% endif %}"
                       href="{{ path('app_register') }}"><i class="fa-solid fa-user-plus"></i> S'inscrire</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>


{% block body %}{% endblock %}


<footer class="footer mt-auto py-3 bg-light mb-0">
    <div id="copyright" class="container">
        <span>Copyright &copy; 2022</span>
    </div>

    {# navbar bottom mobile #}
    <nav id="navbar-bottom" class="navbar fixed-bottom navbar-dark bg-black">
        <div class="container-fluid">
            <a class="nav-link {% if current_menu is defined and current_menu == 'home' %}active{% endif %}"
               href="{{ path('app.home') }}"><i class="fa-solid fa-house-chimney"></i></a>

            <a class="nav-link {% if current_menu is defined and current_menu == 'tricks' %}active{% endif %}"
               href="#tricks"><i class="fa-solid fa-list"></i></a>

            {% if app.user %}
                <a class="nav-link" href="{{ path('logout') }}"><i class="fa-solid fa-right-from-bracket"></i>
                </a>
            {% else %}
                <a class="nav-link {% if current_menu is defined and current_menu == 'login' %}active{% endif %}"
                   href="{{ path('login') }}"><i class="fa-solid fa-right-to-bracket"></i></a>
                <a class="nav-link {% if current_menu is defined and current_menu == 'register' %}active{% endif %}"
                   href="{{ path('app_register') }}"><i class="fa-solid fa-user-plus"></i></a>
            {% endif %}
        </div>
    </nav>
</footer>

<script src="{{ asset('assets/app.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>

