{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Etape 1{% endblock %}

{% block body %}
    <section class="container my-4 text-center">

        <h2 class="h3 my-5 font-weight-normal">Mot de passe oublié - Etape 1</h2>

        {{ form_start(forgotPasswordFormStep1) }}

        <div class="row my-3 justify-content-center">
            <div class="col-md-4 border border-dark p-4">
                <div>
                    {{ form_row(forgotPasswordFormStep1.email.first) }}
                </div>
                <div>
                    {{ form_row(forgotPasswordFormStep1.email.second) }}
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-outline-dark my-4">Envoyez-moi un lien de récupération</button>
                </div>
            </div>
        </div>
        {{ form_end(forgotPasswordFormStep1) }}
    </section>

{% endblock %}


