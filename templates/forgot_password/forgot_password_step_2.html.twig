{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Etape 2{% endblock %}

{% block body %}
    <section class="container my-4 text-center">

        <h2 class="h3 my-5 font-weight-normal">Mot de passe oublié - Etape 2</h2>

        {{ form_start(forgotPasswordFormStep2) }}

        <div class="row my-3 justify-content-center">
            <div class="col-md-4 border border-dark p-4">
                <div>
                    {{ form_row(forgotPasswordFormStep2.password.first) }}
                </div>
                <div>
                    {{ form_row(forgotPasswordFormStep2.password.second) }}
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-outline-dark my-3">Modifier mon mot de passe</button>
                    <br>
                    <small>Ce lien sera invalide à {{ passwordMustBeModifiedBefore }}</small>
                </div>
            </div>
        </div>
        {{ form_end(forgotPasswordFormStep2) }}
    </section>

{% endblock %}


